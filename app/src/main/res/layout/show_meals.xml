<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:gravity="center_vertical"
    android:padding="10dp">


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/image_meal"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:elevation="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/purger"
        app:civ_border_color="#FF5722"
        app:civ_border_width="2dp" />


    <!--    Start cardview-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="-65dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="#D3ECF8"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">


        <LinearLayout

            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="80dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/editMeal"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_edit_24"
                android:layout_gravity="end"/>

            <TextView
                android:id="@+id/txtNameMeal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Fried Chicken"
                android:textColor="@color/black"
                android:textSize="24sp"

                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtResturant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resturant Name"
                android:textColor="#4CAF50"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="txtDescription"
                android:textColor="#000000"
                android:textStyle="italic" />
            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$150.2"
                android:textColor="#4CAF50"
                android:textStyle="bold" />
            <RatingBar
                android:id="@+id/txtRateMeal"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:max="5"
                android:progressTint="#FFCC01"
                android:rating="4"
                android:scaleX=".6"
                android:scaleY=".6"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp"

                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnOrder"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_menu"
                android:text="order"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>


