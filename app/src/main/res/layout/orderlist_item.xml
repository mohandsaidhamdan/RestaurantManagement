<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:gravity="center_vertical"
    android:padding="10dp">


    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageOrder"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:elevation="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/purger"
        app:civ_border_color="#FF5722"
        app:civ_border_width="2dp" />


    <!--    Start cardview-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="135dp"

        android:layout_marginStart="-65dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="#D3ECF8"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">


        <LinearLayout

            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="80dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/deleteOrder"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                app:srcCompat="@drawable/ic_cancel_24" />

            <TextView
                android:id="@+id/txtNameOrder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Fried Chicken"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtAmountOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textSize="24sp"
                android:textColor="#CDDC39"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPriceOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$150.2"
                android:textSize="24sp"
                android:textColor="#4CAF50"
                android:textStyle="bold" />



        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>

